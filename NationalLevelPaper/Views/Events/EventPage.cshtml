@model IEnumerable<NationalLevelPaper.Models.Event>
@{
    ViewBag.Title = "EventPage";
    Layout = "~/Views/Shared/Innerpages.cshtml";
}

<h2>EventPage</h2>



<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Event Page</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="/templates/eduhome/img/icon/section.png" alt="section-title">
                    <h2>EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a href="event-details.html"><img src="/templates/eduhome/img/event/event1.jpg" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Date</h3>
                            <h4><a href="event-details.html">@item.Name</a></h4>
                            <ul>
                                <li><i class="fa fa-user"> @item.Spearker</i></li>
                                <li><i class="fa fa-clock-o"></i>9.00 AM - 4.45 PM</li>
                                <li><i class="fa fa-map-marker"></i>New Yourk City</li>
                            </ul>
                            <div class="event-content-right">
                                @*<a class="default-btn" href="event-details.html">join now</a>*@

                                @*@Html.ActionLink("Event Detail","EventDetail", "Events", new {@class= "default-btn" })*@


                                <a href="@Url.Action("EventDetail", "Events", new { id = item.Id })">Details</a>

                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

    </div>
</div>



